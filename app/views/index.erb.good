%html
  %head
    %title Club Managment System
  %body
    - if flash.has?(:message)
      #{flash[:message]}
    - if logged_in?
      %p 
        You are logged in as #{User.find(session[:user_id]).name}
      %p
        %a{ href: "/boats" } Boat List
      %p
        %a{ href: "/reservations" } Reservations
      %p
        %a{ href: "/logout" } Logout
